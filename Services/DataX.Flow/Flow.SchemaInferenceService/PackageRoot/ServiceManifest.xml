<ServiceManifest Name="Flow.SchemaInferenceServicePkg"
                 Version="1.0.0.20190927"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ServiceTypes>
    <!-- This is the name of your ServiceType. 
         This name must match the string used in RegisterServiceType call in Program.cs. -->
    <StatelessServiceType ServiceTypeName="Flow.SchemaInferenceServiceType" />
  </ServiceTypes>

  <!-- Code package is your service executable. -->
  <CodePackage Name="Code" Version="1.0.0.20190927">
    <EntryPoint>
      <ExeHost>
        <Program>Flow.SchemaInferenceService.exe</Program>
        <WorkingFolder>CodePackage</WorkingFolder>
      </ExeHost>
    </EntryPoint>
    <EnvironmentVariables>
      <EnvironmentVariable Name="ASPNETCORE_ENVIRONMENT" Value=""/>
      <!-- For local development with MSI, make sure you have a cert installed locally 
      and AzureServicesAuthConnectionString has to be defined with a value RunAs=App;AppId=<AppId>;TenantId=<TenantId>;CertificateThumbprint=<CertificateThumbprint>;CertificateStoreLocation=LocalMachine
      Plese refer to README -->
      <EnvironmentVariable Name="AzureServicesAuthConnectionString" Value="" />
    </EnvironmentVariables>
  </CodePackage>

  <!-- Config package is the contents of the Config directoy under PackageRoot that contains an 
       independently-updateable and versioned set of custom configuration settings for your service. -->
  <ConfigPackage Name="Config" Version="1.0.0.20190927" />

  <Resources>
    <Endpoints>
      <!-- This endpoint is used by the communication listener to obtain the port on which to 
           listen. Please note that if your service is partitioned, this port is shared with 
           replicas of different partitions that are placed in your code. -->
      <Endpoint Protocol="http" Name="ServiceEndpoint" Type="Input" Port="8980" />
    </Endpoints>
  </Resources>
</ServiceManifest>